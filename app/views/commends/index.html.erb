<h1>Listing commends</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Product</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @commends.each do |commend| %>
      <tr>
        <td><%= commend.content %></td>
        <td><%= commend.product_id %></td>
        <td><%= commend.user_id %></td>
        <td><%= link_to 'Show', commend %></td>
        <td><%= link_to 'Edit', edit_commend_path(commend) %></td>
        <td><%= link_to 'Destroy', commend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Commend', new_commend_path %>
